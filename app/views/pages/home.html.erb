<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://i.pinimg.com/originals/13/6c/4d/136c4df7a73276c9e2fb088fee3c4972.jpg);">
  <div class="container">
    <h1><strong>starRide</strong></h1>
    <p>giving you <strong>space</strong></p>
  </div>
</div>
<div class="background">
<h2 class="text-center">Type the name of the spaceship you're looking for</h2>
<%= form_with url: spaceships_path, method: :get, class: "d-flex" do %>
  <%= text_field_tag :query,
    params[:query],
    class: "form-control",
    placeholder: "Find a spacesip"
  %>
  <%= submit_tag "Search", class: "btn btn-primary" %>
<% end %>
<br>
  <h2 class="text-center">Or select the planet the spaceship is based on</h2>
  <div class="d-flex justify-content-between">
    <div class="planetcard">
      <%= image_tag('seed/planet_1.png', style: "height: 250px; width: 250px") %>
      <%= link_to "Vulcan", spaceships_path(planet: "Vulcan") %>
    </div>
    <div class="planetcard">
      <%= image_tag('seed/planet_2.png', style: "height: 250px; width: 250px") %>
      <%= link_to "Tatooine", spaceships_path(planet: "Tatooine") %>
    </div>
    <div class="planetcard">
      <%= image_tag('seed/planet_3.png', style: "height: 250px; width: 250px") %>
      <%= link_to "Krypton", spaceships_path(planet: "Krypton") %>
    </div>
      <div class="planetcard">
      <%= image_tag('seed/planet_4.png', style: "height: 250px; width: 250px") %>
      <%= link_to "Dagobah", spaceships_path(planet: "Dagobah") %>
    </div>
    <div class="planetcard">
      <%= image_tag('seed/planet_5.png', style: "height: 250px; width: 250px") %>
      <%= link_to "Earth", spaceships_path(planet: "Earth") %>
    </div>
  </div>
  <br>
  <h2 class="text-center">Take a look at some of our spaceships</h2>
  <br>
  <div class="container mx-auto">
    <div class="row g-4">
    <% @spaceships.sample(4).each do |spaceship| %>
      <div class="col">
        <div class="card h-100">
        <% if spaceship.photo.attached? %>
          <%= image_tag spaceship.photo %>
        <% else %>
          <img src="https://wallpaperaccess.com/full/1224372.jpg" class="card-img-top"
            alt="example card" />
        <% end %>
          <div class="card-body">
            <h5 class="card-title"><%= link_to spaceship.name, spaceship_path(spaceship) %></h5>
            <p class="card-text">
              <%= spaceship.description %>
            </p>
              <p class="card-text">
              <p>Price per day: $ <%= number_with_delimiter(spaceship.price_per_day) %></p>
            </p>
          </div>
          <div class="card-footer">
            <small class="text-muted">Max. number of passengers: <%= spaceship.number_of_passenger %></small>
          </div>
          <div class="card-footer">
            <small class="text-muted">Available on planet <%= spaceship.planet %></small>
          </div>
        </div>
      </div>
    <% end %>
    </div>
  </div>

  <h2>Didn't find anything? See all our spaceships</h2>
  <%= link_to "All spaceships", spaceships_path %>

<%# APPLY FRONT END HERE %>

</div>
